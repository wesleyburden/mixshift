<!doctype html>
<!--[if lt IE 9]> <html class="no-js lt-ie9"> <![endif]-->
<!--[if (gt IE 8)|!(IE)]><!--> <html class="no-js"> <!--<![endif]--> 
<html>
<head>
	<!--[if lt IE 9]>
		<script type="text/javascript" src="assets/js/html5shiv.min.js"></script>
	<![endif]-->
	<title></title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta charset='utf-8'>
	<!-- TODO: Do a favicon! -->	
	<link rel="shortcut icon" type="image/ico" href="favicon.png" />
	{{ "style.css" | asset_url | stylesheet_tag }}
	<!-- TODO: Download a custom build of modernizer to suit the project -->	
	{{ "modernizr.js" | asset_url | script_tag }}		
</head>
<body>
	<header class="site-header" role="banner">
		<div class="branding">
			<h1 class="site-title"></h1>
		</div>
		<nav>
			<ul class="main-menu">
				<li><a href="/">Home</li>
			</ul>
		</nav>
	</header>
	
	<main class="content-area" role="main">
		{% block content %}{% endblock %}
	</main>
	
	<footer class="site-footer">
		<nav>
			<ul class="footer-menu">
				<li><a href="/">Terms & Conditions</li>
			</ul>
		</nav>		
	</footer>
	{{ "jquery-1.11.0.min.js" | asset_url | script_tag }}
	{{ "footerScripts.js" | asset_url | script_tag }}
	{% block footerHook %}{% endblock %}
</body>
</html>

